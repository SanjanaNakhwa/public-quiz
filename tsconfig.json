{
  "extends": "ts-node/node16/tsconfig.json",
  "ts-node": {
    "files": true,
    "compilerOptions": {
    	"declaration": false
    }
  },
  "compilerOptions": {
    "lib": ["esnext","dom"],
    "types": ["node"],
		"outDir": "dist",
    "target": "ES2019",
    "declaration": true,
    "module": "commonjs",
    "isolatedModules": true,
    "moduleResolution": "node",
		"declarationDir": "./types",
    "typeRoots": ["./src/@types"]
  },
  "include": [
    "src/**/*"
  ]
}
